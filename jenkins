pipeline {
    agent any
    environment {
        // Optionally set Terraform version or credentials here
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/myvijay2345/testrepo.git
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan'
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed.'
        }
        success {
            echo 'Terraform plan succeeded.'
        }
        failure {
            echo 'Terraform plan failed.'
        }
    }
}
